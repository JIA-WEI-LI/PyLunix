ToggleButton[position="bottom"],
ToggleButton[position="bottom"]:checked {
    border-bottom-left-radius: ToggleButtonCornerRadius;
    border-bottom-right-radius: ToggleButtonCornerRadius;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
